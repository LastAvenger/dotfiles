#!/usr/bin/bash

if [[ -z  $1 ]]; then
    echo "Usage: archcnsign <PACKAGE NAME>"
    exit 0
fi

TMPDIR=/tmp/archcnsign
REMOTE=archlinuxcn
REPO=gitrepo

echo ">> Creating temp directory..."
mkdir $TMPDIR 2>/dev/null || true

echo ">> Connecting to '$REMOTE'..."
PKG=$(ssh $REMOTE "cd $REPO/$1 && ls -1 *.pkg.tar.xz | tail -n1")
if [[ -z $PKG ]]; then
    echo "** Package '$1' not found"
    exit 1
fi

echo  ">> Fetching $PKG..."
scp $REMOTE:$REPO/$1/$PKG $TMPDIR/$PKG
if [[ $? != 0 ]]; then
    echo "** Can not fetch package '$PKG'"
    exit 1
fi

echo  ">> GPG Signing..."
gpg --detach-sign $TMPDIR/$PKG
if [[ $? != 0 ]]; then
    echo "** Can not sign package '$PKG'"
    exit 1
fi

echo  ">> Uploading signture ..."
scp $TMPDIR/$PKG.sig $REMOTE:$REPO/$1/
if [[ $? != 0 ]]; then
    echo "** Can not upload signture"
    exit 1
fi

echo  ">> All Done."
