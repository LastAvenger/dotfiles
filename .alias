# ~/.alias

# commonly used
alias _='sudo'
alias _p='proxychains'
alias l='ls'
alias m='make'
alias v='vim'

alias ls='ls --color=auto'
alias grep='grep --color=auto'

alias ll='ls -l'
alias la='ls -a'

alias vin='vim --noplugin'
# alias qtox='XDG_CURRENT_DESKTOP= qtox'
# alias wiznote='XDG_CURRENT_DESKTOP= WizNote'
# alias cutegram='XDG_CURRENT_DESKTOP= cutegram'
# alias goldendict='XDG_CURRENT_DESKTOP= goldendict'

## systemd alias
alias sstart='systemctl start'
alias sstop='systemctl stop'
alias sre='systemctl restart'
alias sstat='systemctl status'
alias jour='journalctl -a -f'

## systemd --user alias
alias usstart='systemctl --user start'
alias usstop='systemctl --user stop'
alias usre='systemctl --user restart'
alias usstat='systemctl --user status'
alias ujour='journalctl --user -a -f'

# package manager
alias pacsyu='pacman -Syu'
alias pacss='pacman -Ss'
alias felix='sudo pacman -Syu'

## git alias
alias gl='git log --color --graph --decorate -M --pretty=oneline --abbrev-commit -M'
alias gp='git push'
alias gpl='git pull'
alias gs='git status'
alias ga='git add'
alias gd='git diff'
alias gcm='git commit'
alias gco='git checkout'
alias gst='git stash'

## cd alias
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

alias mj8='make -j8'
alias cr='cargo run'
